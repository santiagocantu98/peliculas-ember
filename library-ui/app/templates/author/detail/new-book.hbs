<div class="modal">
    <form class="modal-card" onsubmit={{action "saveBook"}}>
        <h3 class="modal-heading">Add New Movie for {{model.author.last}}, {{model.author.first}}</h3>

        <div class="modal-content">
            <div class="field">
                <label>Movie Title:</label>
                {{input type="text" maxlength="30" placeholder="Movie Title" value=model.book.title}}
            </div>
            <div class="field">
                <label>Actors:</label>
                {{input type="text" maxlength="30" placeholder="Actors" value=model.book.isbn}}
            </div>
            <div class="field">
            <label>Duration:</label>
            {{input type="text" maxlength="10" placeholder="Duration in minutes" value=duration}}
            </div>

            <div class="field">
                <label>Category:</label>
                <select onchange={{action "selectCategory" value="target.value"}}>
                    {{#each categories as |categoryChoice|}}
                        <option value={{categoryChoice}} selected={{eq category categoryChoice}}>{{categoryChoice}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="field">
                <label>Publish Date:</label>
                {{input type="date" placeholder="Publish Date" value=model.book.publishDate}}
            </div>
        </div>

        <div class="modal-footer">
            {{#link-to "author.detail" class="btn-clear"}}Cancel{{/link-to}}
            <button type="submit" class="btn-submit">Submit</button>
        </div>
    </form>  
</div>

