<form onsubmit={{action "submitChanges"}}>
    <div class="field">
        <label>Title:</label>
        {{input type="text" maxlength="30" placeholder="Title" value=title}}
    </div>

    <div class="field">
        <label>Actors:</label>
        {{input type="text" maxlength="50" placeholder="Actors" value=isbn}}
    </div>

    <div class="field">
        <label>Duration:</label>
        {{input type="text" maxlength="10" placeholder="Duration in minutes" value=duration}}
    </div>

    <div class="field">
        <label>Category:</label>
        <select onchange={{action "selectCategory" value="target.value"}}>
            {{#each categories as |categoryChoice|}}
                <option value={{categoryChoice}} selected={{eq category categoryChoice}}>{{categoryChoice}}</option>
            {{/each}}
        </select>
    </div>

    <div class="field">
        <label>Publish Date:</label>
        {{input type="date" placeholder="Publish Date" value=publishDate}}
    </div>   

    <div class="field">
        <label>Director:</label>
        <p class="control">
            {{#power-select onchange=(action (mut author)) selected=author search=(action "searchAuthor") as |author|}}
                {{author.last}}, {{author.first}}
            {{/power-select}}
        </p>
    </div>

    <div class="field">
        <label>Don't See Your Director</label>
        {{new-author-modal onsave=(action (mut author))}}
    </div>



    <div class="form-footer">
        <button type="submit" class="btn-submit">save</button>
    </div>
</form>